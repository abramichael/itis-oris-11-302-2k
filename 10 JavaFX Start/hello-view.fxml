<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.multiuserchatinterface.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextArea fx:id="chat" editable="false" prefHeight="200.0" prefWidth="500.0" />
   <TextArea fx:id="message" onKeyPressed="#onKeyPressed" prefHeight="50.0" prefWidth="419.0" />
    <Button onAction="#onSendButtonClick" text="Send" />
</VBox>
